<div class="container">
    <form action="/waiters:/username" method="GET">

        <div class="header">
            <h1>Ophelia Roster</h1>
        </div>
        <div class="introduction">
            <p1> Please Enter your name & Select Shift Days </p1>
        </div>

        <input type="text" name="user" id="inputElement" class="textArea" placeholder="enter your name here">

        <div class="information">
            <label><input type="checkbox" name="tick" value="mon"> Monday</label>
            <label> <input type="checkbox" name="tick" value="tue"> Tuesday</label>
            <label><input type="checkbox" name="tick" value="wed"> Wednesday</label>
            <label><input type="checkbox" name="tick" value="thu"> Thursday</label>
            <label><input type="checkbox" name="tick" value="fri"> Friday</label>
            <label><input type="checkbox" name="tick" value="sat"> Saturday</label>
            <label><input type="checkbox" name="tick" value="sun"> Sunday</label>

            <button type="submit" name="submit">OK</button>
        </div>
        <div class="granted">
            {{#if messages}}
            {{messages.success}}
            {{/if}}
        </div>
        <div class="denied">
            {{#if messages}}
            {{messages.error}}
            {{/if}}
        </div>
    </form>
