<div class="container">
    <form action="/waiters" method="get">
        <h1>Waiters</h1>
        {{#each waiter}}
        <a href="/waiters/{{this.waiters}}">
            <p>{{waiters}}</p>
        </a>
        {{/each}}
    </form>
    <br>
    <button type="button"><a href="/">back</a></button>
</div>